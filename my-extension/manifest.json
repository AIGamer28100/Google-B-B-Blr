{
    "manifest_version": 3,
    "name": "Discord Reader",
    "description": "Read Discord Application & Chats",
    "version": "1.0",
    "permissions": [
      "activeTab",
      "storage"
    ],
    "host_permissions": [
      "http://*.discord.com/*",
      "https://*.discord.com/*"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["https://discord.com/*"],
        "js": ["content.js"]
      }
    ],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "images/icon16.png",
        "48": "images/icon64.png",
        "128": "images/icon128.png"
      }
    },
    "icons": {
      "16": "images/icon16.png",
      "48": "images/icon64.png",
      "128": "images/icon128.png"
    }
  }
  